{
  "name": "app-backend",
  "version": "1.0.0",
  "description": "Full-stack backend for React app",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/server.ts",
    "dev": "ts-node src/server.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only --no-notify --ignore-watch node_modules src/server.ts",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma || echo 'Prisma generate skipped'",
    "studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",
    "seed:academy": "ts-node --require dotenv/config prisma/seed-academy.ts",
    "seed:admin": "ts-node scripts/seed-admin.ts",
    "create-admin": "node create-admin.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.17.1",
    "@supabase/supabase-js": "^2.87.1",
    "@types/node-fetch": "^2.6.13",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "openai": "^5.21.0",
    "pdf-parse": "^1.1.1",
    "prisma": "^6.17.1",
    "stripe": "^14.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  }
}
