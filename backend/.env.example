# Database
DATABASE_URL="postgresql://username:password@localhost:5432/myapp?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRE="7d"

# Server
PORT=5000
NODE_ENV="development"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Price IDs (create these in Stripe Dashboard > Products)
# Academy Only Plan
STRIPE_PRICE_ACADEMY_MONTHLY="price_1SUCmKKtG2uGDhSNGAFa0mHD"
STRIPE_PRICE_ACADEMY_YEARLY="price_1SUCjTKtG2uGDhSNRWFbe07R"

# Pro Plan (Full Platform)
STRIPE_PRICE_PRO_MONTHLY="price_1SU8gOKtG2uGDhSN8mVgkD1E"
STRIPE_PRICE_PRO_YEARLY="price_1SU8luKtG2uGDhSNZPP8UFR3"

# Team Pro Plan (2-5 members)
STRIPE_PRICE_TEAM_PRO_MONTHLY="price_1SU8tRKtG2uGDhSNWiMGSxlN"
STRIPE_PRICE_TEAM_PRO_YEARLY="price_1SU8qRKtG2uGDhSNi8k6uB9z"

# Enterprise Plan
STRIPE_PRICE_ENTERPRISE_MONTHLY="price_1SU8vXKtG2uGDhSN2e92rn5J"
STRIPE_PRICE_ENTERPRISE_YEARLY="price_1SU8yGKtG2uGDhSN28rCp3Ta"

# Token Packages (one-time purchases)
STRIPE_PRICE_TOKENS_25="price_tokens_25"
STRIPE_PRICE_TOKENS_100="price_tokens_100"
STRIPE_PRICE_TOKENS_500="price_tokens_500"
STRIPE_PRICE_TOKENS_1000="price_tokens_1000"

# Email Configuration
# Email provider toggle: sendgrid or smtp
EMAIL_ENABLED=true
MAIL_PROVIDER=smtp

# --- SendGrid Configuration (Option 1)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# --- SMTP Configuration (Option 2 - Zoho, Gmail, etc.)
# Zoho SMTP (US datacenter)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
MAIL_SECURE=true

# --- Auth (use a Zoho App Password, NOT your login password)
SMTP_USER=noreply@smartpromptiq.com
SMTP_PASS=REPLACE_WITH_ZOHO_APP_PASSWORD

# --- From / branding
FROM_EMAIL=noreply@smartpromptiq.com
FROM_NAME=SmartPromptIQ
REPLY_TO=support@smartpromptiq.com
APP_NAME=SmartPromptIQ

# --- Optional TLS loosening for local dev behind proxies (keep true in prod)
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Render.com specific (for deployment)
RENDER_EXTERNAL_URL="https://your-app.onrender.com"

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI API Key (Required for OpenAI TTS voice generation)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-key"

# Anthropic API Key (Optional - for Claude AI features)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key"

# =============================================================================
# VOICE GENERATION - PHASE 1
# =============================================================================

# ElevenLabs Premium Voice API (Optional - for ultra-realistic voices)
# Get your API key at: https://elevenlabs.io/
# If not set, system will use OpenAI TTS instead
ELEVENLABS_API_KEY="your-elevenlabs-api-key"

# =============================================================================
# VIDEO GENERATION - SHOTSTACK API
# =============================================================================

# Shotstack Video API (Short video creation with voice + music)
# Get your API key at: https://dashboard.shotstack.io/
# Pricing: ~$0.05 per second of video rendered
# Environment: 'stage' for sandbox testing, 'v1' for production
SHOTSTACK_API_KEY="your-shotstack-api-key"
SHOTSTACK_ENV="stage"

# =============================================================================
# MUSIC GENERATION - PHASE 2
# =============================================================================

# Suno API (Primary music generation)
# Third-party providers: sunoapi.org, sunoapi.com, aimusicapi.ai
# Pricing: ~$0.02-0.05 per generation
SUNO_API_URL="https://api.sunoapi.org/v1"
SUNO_API_KEY="your-suno-api-key"

# AI Music API (Alternative)
# Get your API key at: https://aimusicapi.ai/
AI_MUSIC_API_URL="https://api.aimusicapi.ai/v1"
AI_MUSIC_API_KEY="your-ai-music-api-key"

# =============================================================================
# SUPABASE STORAGE - PHASE 1 (REQUIRED)
# =============================================================================
# Used for storing generated audio files (no local storage)
# Get these from: Supabase Dashboard > Settings > API

# Your Supabase project URL
# Example: https://abcdefghijkl.supabase.co
SUPABASE_URL="https://your-project.supabase.co"

# Supabase anon (public) key - safe for client-side
SUPABASE_ANON_KEY="your-supabase-anon-key"

# Supabase service_role key - KEEP SECRET! Used for server-side operations
# This key bypasses Row Level Security (RLS) - never expose to client
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# =============================================================================
# STORAGE CLEANUP WORKER
# =============================================================================
# Enable automatic cleanup of old audio files (runs every 24h)
# Deletes files older than 7 days to keep storage costs low
ENABLE_CLEANUP_SCHEDULER="false"

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage buckets: voice-output, music-output (private)
# Signed URL expiry: 600 seconds (10 minutes)
# Max file size: 50MB
# Allowed formats: mp3, wav, ogg, m4a, webm
# Cleanup retention: 7 days

# Vite Frontend Configuration (for client-side Supabase access)
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"

# CORS
FRONTEND_URL="http://localhost:3000"
