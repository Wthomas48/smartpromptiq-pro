{
    "name": "smartpromptiq-saas",
    "version": "1.0.1",
    "description": "AI-Powered Prompt Engineering SaaS Platform",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "cd backend && npm run dev",
        "dev:client": "cd client && npm run dev",
        "build": "npm run build:client",
        "build:client": "echo 'Building client...' && npm --prefix client ci && npm --prefix client run build && echo 'Client build complete' && ls -la client/dist/",
        "build:server": "echo 'Building server...' && npm --prefix backend ci",
        "install:all": "npm install && cd client && npm install && cd ../backend && npm install",
        "start": "node server.cjs",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:migrate": "drizzle-kit migrate",
        "test": "vitest",
        "lint": "eslint server --ext .ts",
        "type-check": "tsc --noEmit",
        "db:helper": "tsx scripts/db-helper.ts",
        "railway:build": "npm run build:client",
        "railway:start": "npm start",
        "db:shell": "docker-compose exec postgres psql -U postgres -d smartpromptiq",
        "db:stop": "docker-compose down",
        "dev:local": "dotenv -e .env.local -- tsx watch server/index.ts",
        "dev:frontend": "vite",
        "db:logs": "docker-compose logs -f postgres",
        "dev:staging": "dotenv -e .env.staging -- tsx watch server/index.ts",
        "build:frontend": "npm run build:client",
        "deploy:railway": "node railway-deploy.js",
        "railway:deploy": "npm run build && railway up",
        "db:start": "docker-compose up -d",
        "db:reset": "docker-compose down -v && docker-compose up -d",
        "db:utils": "tsx scripts/db-utils.ts"
    },
    "dependencies": {
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "express": "^4.18.2",
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/postcss": "^4.1.13",
        "@tailwindcss/typography": "^0.5.16",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/lru-cache": "^7.10.9",
        "@types/node": "^20.19.9",
        "@types/pg": "^8.15.4",
        "@types/react-router-dom": "^5.3.3",
        "@types/ws": "^8.5.13",
        "@vitejs/plugin-react": "^4.7.0",
        "autoprefixer": "^10.4.21",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.2.0",
        "dotenv-cli": "^9.0.0",
        "drizzle-kit": "^0.30.4",
        "esbuild": "^0.25.0",
        "postcss": "^8.5.6",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.11",
        "tailwindcss-animate": "^1.0.7",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.1",
        "typescript": "^5.8.3",
        "vite": "^5.4.19",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "ai",
        "saas",
        "prompt-engineering",
        "openai",
        "anthropic",
        "stripe",
        "typescript",
        "react"
    ],
    "author": "SmartPromptIQ Team",
    "license": "MIT"
}
